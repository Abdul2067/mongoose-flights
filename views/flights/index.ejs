<%- include("../partials/html-head") %>

<link rel="stylesheet" href="/stylesheets/flights/index.css">

<%- include("../partials/nav") %>
<main>
  <h1>All Flights</h1>
  <table>
    <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Departure</th>
      <th>Delete</th>
    </tr>
    </thead>
    <tbody>
      <% flights.forEach(f => { %>
        <tr>
          <td><%= f.airline %> </td>
          <td><%= f.airport %> </td>
          <td><%= f.flightNo %> </td>
          <td><%= f.departs %> </td>
          <td>
            <a href="/flights/<%= f._id %>">DETAILS</a>
          </td>
          <td>
            <form action="/flights/<%= f._id %>?_method=DELETE" method="POST">
            <button type="submit">X</button>
          </form>
          </td>
        </tr>
      <%}) %> 
    </tbody>
  </table>
  <a href="/">Back</a>
  </main>

<%- include("../partials/footer") %> 